<div class="row" id="counter">
    <div class="col s12 m6 offset-m3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Counter</span>
                <h3>
                    {{ count }}
                </h3>
            </div>
            <div class="card-action">
                <button class="btn red" hx-post="/dec" hx-swap="outerHTML" hx-target="#counter">-</button>
                <button class="btn green" hx-post="/inc" hx-swap="outerHTML" hx-target="#counter">+</button>
            </div>
        </div>
    </div>
</div>